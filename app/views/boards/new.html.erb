<div class="grid grid-cols-1">
  <h1 class="text-2xl font-bold underline pb-5">Minesweeper Board Generator</h1>

  <div class="italic pb-3">Enter your board details.</div>

  <div class="mb-10">
    <%= render "form", board: @board %>
  </div>
  <div>
    <ul class="mt-4 mb-2 list-disc list-inside">
      <div class="font-bold">Last 10 Boards:</div> 
  
    <% @recent_boards.each do |board| %>
      <li>
        <span class="font-bold"><%= board.board_name %></span>
        <span> by <%= board.email %></span>
        <span> on <%= board.created_at.strftime("%B %e, %Y %I:%M %p") %> </span>
      </li>
    <% end %>
    </ul>
  </div>
   <div>
    <%= link_to "Display all boards", boards_path, class: "font-bold my-4"%>
  </div>
</div>
